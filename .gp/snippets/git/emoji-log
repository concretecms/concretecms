# Git Commit, Add all and Push â€” in one step.
cap = "!f() { git add .; git commit -m \"$@\"; git push; }; f"
# Git Commit and Push. Assumes files have already been added
noadd = "!f() { git commit -m \"$@\"; git push; }; f"
